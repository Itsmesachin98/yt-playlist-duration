{
    "manifest_version": 3,
    "name": "YouTube Playlist Duration",
    "version": "1.0",
    "description": "Calculates total duration of a YouTube playlist",
    "permissions": ["scripting", "activeTab"],
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/playlist*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "host_permissions": ["https://www.youtube.com/*"]
}
